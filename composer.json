{
    "name": "buchgenerator/markdown-pdf",
    "description": "PHP-Programm zur Erstellung von PDF-BÃ¼chern aus Markdown-Dateien",
    "type": "project",
    "license": "proprietary",
    "authors": [
        {
            "name": "UbivisMedia",
            "email": "info@ubivismedia.com"
        }
    ],
    "minimum-stability": "stable",
    "prefer-stable": true,
    "require": {
        "php": ">=7.4",
        "erusev/parsedown": "^1.7",
        "mpdf/mpdf": "^8.1",
        "knplabs/github-api": "^3.0",
        "guzzlehttp/guzzle": "^7.0",
        "symfony/http-client": "^5.4",
        "nyholm/psr7": "^1.5",
        "ext-json": "*",
        "ext-fileinfo": "*"
    },
    "autoload": {
        "psr-4": {
            "BookGenerator\\": "src/"
        }
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true,
        "allow-plugins": {
            "php-http/discovery": true
        }
    },
    "scripts": {
        "post-install-cmd": [
            "@php -r \"if (!is_dir('output')) { mkdir('output', 0755, true); }\""
        ]
    }
}
